{
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.markdownlint": true
  },
  "conventionalCommits.scopes": [
    "maintenance",
    "workspace",
    "community",
    "general",
    "theme"
  ],
  "markdownlint.config": {
    "extends": ".github/.markdownlint.yaml"
  },
  "files.associations": {
    "*.md": "mdx"
  }
}
